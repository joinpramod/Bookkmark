{
  "manifest_version": 2,

  "name": "Booqmarqs",
  "description": "Extension for booqmarqs.com",
  "version": "1.8",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "tabs", "<all_urls>", "bookmarks", "cookies"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}