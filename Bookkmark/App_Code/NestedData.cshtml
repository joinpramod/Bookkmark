@helper GetHtml(List<Bookkmark.Models.Bookkmark> folderList, long parentID)
{
    <table class="table table-bordered">
        @{
            long currentID = 0;
            int rowIndex = 0;
            foreach (var i in folderList.Where(a => a.BookkmarkID.Equals(parentID)))
            {
                if (i.BookkmarkID == currentID)
                {
                    continue;
                }
                else
                {
                    if (rowIndex == 0)
                    {
                        <thead>
                        <tr>
                        @*<th> Employee ID </th>*@
                        <th> Name </th>
                        @*<th> URL </th>*@
                        @*<th> Home Phone </th>*@
                        </tr>
                        </thead>
                    }
                    rowIndex++;
                    currentID = i.BookkmarkID;
                    var Sub = folderList.Where(a => a.BookkmarkID.Equals(i.BookkmarkID)).ToList();
                    var newBookkmarkList = folderList.Where(a => !a.BookkmarkID.Equals(i.BookkmarkID)).ToList();
                    <tbody>
                    <tr>
                    <td>
                        @if (Sub.Count > 0)
                        {
                          <span class="icon icon-e" style="float:left; cursor:pointer;"></span>
                        }
                        else
                        {
                            <span style="display:inline-block;width:14px"> &nbsp;</span>
                        }
                        @i.BookkmarkID
                    </td>
                    @*<td>@i.TitleOfCourtesy @i.FirstName @i.LastName</td>*@
                    <td>@i.Name</td>
                    @*<td>@i.URL</td>*@
                      </tr>
                        <tr style="display:none;">
                            @if (Sub.Count > 0)
                            {
                                <td colspan = "4" class="innerTable">
                                @GetHtml(newBookkmarkList, i.BookkmarkID)
                                </td>
                            }
                            else
                            {
                                <td colspan="4"></td>
                            }
                        </tr>
                  </tbody>
                }
            }
        }

    </table>
}
