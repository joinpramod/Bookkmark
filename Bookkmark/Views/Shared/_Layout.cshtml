<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="Language" content="en-us" />
    <meta name="Robots" content="All" />
    <meta name="google-signin-client_id" content="">
    <meta name="application-name" content="Bookmaq" />
    <meta name="keywords" content="Bookmark" />
    <title>Booqmarqs</title>
    <link rel="shortcut icon" href="~/images/favicon.png">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/plugins.min.css">
    <link rel="stylesheet" href="~/Content/pe-icon-7-stroke.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="~/Content/responsive.css">



</head>

<body class="home-page">

    <!-- Preloader Start -->
    <div id="preloader">
        <div class="apland-load"></div>
    </div>
    <header class="header_area">
        <div class="main_header_area animated">
            <div class="container">
                <div class="row">

                    <div class="col-4 col-sm-3">
                        <div class="logo_area">
                            <a href="index.html"><img src="~/images/logo.png" alt="Booqmarqs"> <span>Booqmarqs</span></a>
                        </div>
                    </div>

                    <div class="col-8 col-sm-9 text-right">
                        <div class="main_menu_area d-inline-block">
                            <div class="mainmenu">
                                <nav>
                                    <ul id="nav">
                                        <li><a href="/Bookmark/Home/Index#home">Home</a></li>
                                        <li><a href="/Bookmark/Home/Index#howitworks">How It Works</a></li>
                                        <li><a href="/Bookmark/Home/Index#whattoexpect">What To Expect</a></li>
                                        <li><a href="@Url.Action("Demo", "Home")">Demo</a></li>
                                        @if (Session["User"] == null)
                                        {
                                            <li><a href="@Url.Action("Login", "Account")">Login</a></li>
                                        }
                                        else
                                        {
                                            <li>@Html.ActionLink("My Profile", "ViewUser", "Account")</li>
                                            <li>@Html.ActionLink("Logout", "Logout", "Account")</li>

                                        }
                                    </ul>
                                </nav>
                            </div>
                        </div>
@if (Session["User"] == null)
{
                        <div class="header_signup_in_btn d-inline-block">
                            <a href="@Url.Action("Choice", "Account")">Get Started</a>
                        </div>
}
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Header Area End -->
    </header> 

    @RenderBody()


    <footer class="footer_area">
        <div class="footer_bottom_area">
            <div class="container">
                <div class="row">
                    <div class="col-7">

                        <div class="footer_menu text-left">
                            <ul>
                                <li><a href="@Url.Action("API", "Home")">API</a></li>
                                <li><a href="@Url.Action("Policy", "Home")">Privacy Policy</a></li>
                                <li><a href="@Url.Action("Disclaimer", "Home")">Term &amp; Conditions</a></li>
                                <li><a href="@Url.Action("Contact", "Home")">Help or Feedback</a></li>
                                <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
                            </ul>
                            <div class="footer_social_area">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-google-plus"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-5">

                        <div class="footer_menu text-right">
                            <div class="footer_bottom text-right copywrite-area">
                                Copyright © 2017 Booqmarqs. All rights reserved.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </footer>

    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="~/Scripts/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Owl Carousel js -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <!-- Plugins js -->
    <script src="~/Scripts/plugins.min.js"></script>
    <!-- Active js -->
    <script src="~/Scripts/custom.js"></script>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
    @RenderSection("scripts", required: false)




</body>



</html>
