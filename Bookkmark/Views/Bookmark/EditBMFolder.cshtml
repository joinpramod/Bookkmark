@{
    ViewBag.Title = "AddEditBM";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
}

<script type="text/javascript">
    window.onload = function () {

        var RefreshValue = @Html.Raw(Json.Encode(ViewData["Refresh"]));
        if(RefreshValue != null)
        {
            window.opener.location.reload();
            window.close();
        }
    };
</script>


@model Bookmark.BookmarkCls

@using (Html.BeginForm("EditBMFolder", "Bookmark"))
{

<div class="container">
    <div class="span12">
        <div class="section_heading_bookmark">
            @if (ViewBag.EditType == "Bookmark")
            {
                <h3><span>Edit Bookmark</span> </h3>
            }
            else
            {
                <h3><span>Edit Folder</span> </h3>
            }
        </div>

        <div class="form_area">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <div class="error_info">@ViewBag.Ack</div>
                    </div>
                    @if (ViewBag.EditType == "Bookmark")
                    {
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.URL, new { placeholder = "Link", @class = "form-control", required = "required" })
                    </div>
                    }
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { placeholder = "Link", @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.FolderId, new SelectList((System.Collections.IEnumerable)ViewData["ddFolders"], "Id", "Name"), "---Select Folder---", new { @class = "form-control", style = "height:50px" })
                    </div>
                    <button type="submit" class="btn btn-block">Submit</button>
                </div>
            </div>@Html.Hidden("HFBookmarkId", (Object)ViewBag.BookmarkId)
        </div>

    </div>
</div>
}














