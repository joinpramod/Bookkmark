@{
    ViewBag.Title = "My Bookmarks";
    Layout = "~/Views/Shared/_Layout_NoGoogle.cshtml";
}
@model List<BookmarkCls>

<style>
    .collapse1 {
        width: 28px;
        background-image: url('../Images/Folder.png');
        background-repeat: no-repeat;
        /*background-position: -36px -17px;*/
        display: inline-block;
        /*cursor: pointer;*/
    }

    .expand1 {
        width: 28px;
        background-image: url('../Images/FolderOpen2.png');
        background-repeat: no-repeat;
        /*background-position: -50px -17px;*/
        display: inline-block;
        /*cursor: pointer;*/
    }

    .treeview {
        /*background-color:#f7f6f6;*/
        border-radius:10px;
        /*border-color:#fcd767;
        border-width:1px;*/
        /*border-width:1px;
        border-color:#fcd767;
        border:groove;*/
    }

    .treeview ul {
        font: 20px;
        margin: 0px;
        padding-left: 2%;
        list-style: none;
    }

    .treeview > li > a {
        font-weight: bold;
    }

    .treeview li {
    }

        .treeview li a {
            padding: 4px;
            font-size: 16px;
            display: inline-block;
            text-decoration: none;
            width: auto;
             color:#333;
             font-weight:400;
        }

    /* context menu */

    .context-menu {
        display: none;
        position: absolute;
        z-index: 10;
        padding: 0px 0;
        width: 180px;
        background-color: #fff;
        border: solid 1px #dfdfdf;
        box-shadow: 1px 1px 2px #cfcfcf;
    }

    .context-menu--active {
        display: inline-block;
    }

    .context-menu__items {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .context-menu__item {
        display: block;
        margin-bottom: 0px;
    }

        .context-menu__item:last-child {
            margin-bottom: 0;
        }

    .context-menu__link {
        display: block;
        padding: 4px 12px;
        color: #333;
        text-decoration: none;
          font-weight:400;
    }

        .context-menu__link:hover {
            color: #333;
            background-color: #F3CD50;
              font-weight:400;
        }
</style>


<div class="container">
    <div class="span12">
        <div class="section_heading" style="padding-top:20px;">
            <h3><span>My Bookmarks</span> </h3>
        </div>
        @using (Html.BeginForm("MyBookmarks", "Bookmark", FormMethod.Post, new { @class = "navbar-form navbar-left" }))
        {
        <nav class="navbar navbar-default">
            <div class="form-inline">
                <div class="row">
                    @Html.TextBox("txtSearch", "", new { @class = "form-control", style = "width:250px", placeholder = "Link like" })
                    <div class="form_search">
                        <button type="submit" name="Search" id="Search" value="Search" class="btn btn-block" style="width:100px">Search</button>
                    </div>
                </div>
            </div>
        </nav>
        }
        <br />
        <div class="treeview">
            @if (Model != null && Model.Count() > 0)
            {
            <ul>
                @Treeview.GetTreeView(Model, Model.FirstOrDefault().FolderId)
            </ul>
            }
            @if (Model != null && Model.Count() == 1)
            {
                <br/>
                <div class="error_info" style="width:90%">
                    There are no bookmarks currently. <br/>
                    You can either import bookmarks from <a href="/Bookmark/Import">Import</a> tab above or create new ones by just right clicking on the <b>Default</b> folder above. <br/>
                    Go ahead and get started, very easy and handy tool.
                </div>
            }
        </div>
        <div style="height:40px">&nbsp;</div>
        <nav id="context-menu" class="context-menu">
            <ul class="context-menu__items">
                <li class="context-menu__item">
                    <a href="#" class="context-menu__link" data-action="Edit">Edit</a>
                </li>
                <li class="context-menu__item">
                    <a href="#" class="context-menu__link" data-action="Move">Move</a>
                </li>
                <li class="context-menu__item">
                    <a href="#" class="context-menu__link" data-action="Delete">Delete</a>
                </li>
                <li class="context-menu__item">
                    <a href="#" class="context-menu__link" data-action="AddB">Add New Bookmark</a>
                </li>
                <li class="context-menu__item">
                    <a href="#" class="context-menu__link" data-action="AddF">Add New Folder</a>
                </li>
            </ul>
        </nav>

    </div>
</div>





    @section Scripts{
        <script>
                    $(document).ready(function () {
                        $(".treeview li>ul").css('display', 'show'); // Hide all 2-level ul
                        $(".treeview li>ul>li").children('ul').slideToggle();
                        $(".collapsible").click(function (e) {
                            e.preventDefault();
                            $(this).toggleClass("collapse1 expand1");
                            $(this).closest('li').children('ul').slideToggle();
                        });
                    });
        </script>
        <script src="~/Scripts/main.js"></script>
    }









