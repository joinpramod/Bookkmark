
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
    
}

<script type="text/javascript">
    window.onload = function () {

        var RefreshValue = @Html.Raw(Json.Encode(ViewData["Refresh"]));
        if(RefreshValue != null)
        {
            window.opener.location.reload();
            window.close();
        }
    };
</script>

<div style="height:40px">&nbsp;</div>
@model Bookmark.BookmarkCls

@using (Html.BeginForm("Delete", "Bookmark"))
{

    <div class="container">
        <div class="span12">
            <div class="section_heading_bookmark">
                @if (ViewBag.EditType == "Bookmark")
                {
                    <h3><span>Delete Bookmark</span> </h3>
                }
                else
                {
                    <h3><span>Delete Folder</span> </h3>
                }
            </div>

            <div class="form_area">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-12">
                        <div class="form-group">
                            <div class="error_info">@ViewBag.Ack</div>
                        </div>
                        <div class="form-group">
                            <div class="success_info" style="font-weight:bold">@ViewBag.Name</div>
                        </div>
                        <div class="form-group">
                            <div class="error_info">@ViewBag.Info</div>
                        </div>
                        <div style="height:20px">&nbsp;</div>
                        <div class="row justify-content-center">

                            <div class="col-xs-6">
                                @*<input type="submit" value="Yes" id="btnYes" name="btnYes" style="height:40px;border-radius:5px" class="mysubmit" />*@
                                <button class="btn btn-block" id="btnYes" name="btnYes">Yes</button>
                            </div>
                            <div class="col-xs-6">
                                @*<input type="submit" value="No" id="btnNo" name="btnNo" style="height:40px;border-radius:5px" class="mysubmit" />*@            
                                <button class="btn btn-block" id="btnNo" name="btnNo">No</button>
                            </div>

                        </div>
                    </div>
                </div>@Html.Hidden("HFBookmarkId", (Object)ViewBag.BookmarkId)
            </div>

        </div>
    </div>
}






