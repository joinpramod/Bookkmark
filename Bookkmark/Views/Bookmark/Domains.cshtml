
@{
    ViewBag.Title = "Domains";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
    var grid = new WebGrid(canPage: true, rowsPerPage: 10);
    grid.Bind(source: Model, rowCount: ViewBag.TotalRows, autoSortAndPage: false);
}
<div class="container">
    <div class="span12">
        <div class="section_heading" style="padding-top:20px">
            <h3><span>Domians</span> </h3>
        </div>

        <nav class="navbar navbar-default">
            <div class="form_search">
                @using (Html.BeginForm("AddDomain", "Bookmark", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                {
                    <div class="form-group">
                        <div class="error_info">@ViewBag.Ack</div>
                    </div>
                    <table>
                        <tr>
                            <td>
                                @Html.TextBox("txtDomain", "", new { @class = "form-control", style = "width:200px", placeholder = "Domain name", required="required" })
                            </td>
                            <td  style="padding-left:10px">
                                @*<button id="AddDomain" name="AddDomain" value="Add another domain" type="submit" class="btn btn-block" />*@
                                <button type="submit" name="AddDomain" value="Add another domain" class="btn btn-block" style="width:120px">Add domain</button>
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </nav>
        <div style="height:20px"></div>


        <div style="font-size:14px">
            @grid.Table(
                tableStyle: "table table-responsive table-bordered table-striped",
                columns: grid.Columns(
                    grid.Column(columnName: "Name", header: "Domain"),
                    grid.Column(columnName: "Script", header: "Script")
                )
            )

            <div class="row">
                <div class="col-sm-12 text-right">
                    @grid.PagerList(mode: WebGridPagerModes.All, paginationStyle: "pagination pagination-small pagination-right")
                </div>
            </div>

            @Html.Hidden("dir", grid.SortDirection)
            @Html.Hidden("col", grid.SortColumn)

        </div>
        <div style="height:40px"></div>
    </div>
    </div>
