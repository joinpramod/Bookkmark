
@{
    ViewBag.Title = "Rename";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
}
<script type="text/javascript">
    window.onload = function () {

        var RefreshValue = @Html.Raw(Json.Encode(ViewData["Refresh"]));
        if(RefreshValue != null)
        {
            window.opener.location.reload();
            window.close();
        }
    };
</script>

@using (Html.BeginForm("NewBMFolder", "Bookmark"))
{
<div class="container">
    <div class="span12">
        <div class="section_heading_bookmark">
            @if (ViewBag.AddType == "Bookmark")
            {
                <h3><span>Add New Bookmark</span> </h3>
            }
            else
            {
                <h3><span>Add New Folder</span> </h3>
            }
        </div>

        <div class="form_area">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <div class="error_info">@ViewBag.Ack</div>
                    </div>
                    @if (ViewBag.AddType == "Bookmark")
                    {
                    <div class="form-group">
                        <b>Link :</b>
                        @Html.TextBox("txtLink", (Object)ViewBag.URL, new { placeholder = "Link", @class = "form-control", required = "required" })
                    </div>
                    }
                    <div class="form-group">
                        <b>Name :</b>
                        @Html.TextBox("txtName", "", new { placeholder = "Name", @class = "form-control", required = "required" })
                    </div>
                    <div class="form-group">
                        <b>Folder :</b>
                        @Html.DropDownList("ddFolder", new SelectList((System.Collections.IEnumerable)ViewData["ddFolders"], "Id", "Name"), "---Select Folder---", new { @class = "form-control", style = "height:50px;", required = "required" })
                    </div>
                    <button type="submit" class="btn btn-block" >Submit</button>
                </div>
            </div>@Html.Hidden("HFBookmarkId", (Object)ViewBag.BookmarkId)
        </div>
       
    </div>
</div>
}






