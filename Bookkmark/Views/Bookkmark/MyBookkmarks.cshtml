        <style>
            /* context menu */

            .context-menu {
                display: none;
                position:  absolute;
                z-index: 10;
                padding: 0px 0;
                width: 180px;
                background-color: #fff;
                border: solid 1px #dfdfdf;
                box-shadow: 1px 1px 2px #cfcfcf;
            }

            .context-menu--active {
                display: inline-block;
            }

            .context-menu__items {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .context-menu__item {
                display: block;
                margin-bottom: 0px;
            }

                .context-menu__item:last-child {
                    margin-bottom: 0;
                }

            .context-menu__link {
                display: block;
                padding: 4px 12px;
                color: #333;
                text-decoration: none;
            }

                .context-menu__link:hover {
                    color: #333;
                    background-color: #F3CD50;
                }
        </style>
