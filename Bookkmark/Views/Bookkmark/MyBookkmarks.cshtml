@{
    ViewBag.Title = "My Bookkmarks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:100px"></div>
<h2>My Applications</h2>
@model List<Bookkmark.Models.Folder>
<style>
    .collapse1 {
        width: 28px;
        background-image: url('../../Images/Folder.png');
        background-repeat: no-repeat;
        /*background-position: -36px -17px;*/
        display: inline-block;
        /*cursor: pointer;*/
    }

    .expand1 {
        width: 28px;
        background-image: url('../../Images/FolderOpen2.png');
        background-repeat: no-repeat;
        /*background-position: -50px -17px;*/
        display: inline-block;
        /*cursor: pointer;*/

    }

    .treeview ul {
        font: 20px Arial, Sans-Serif;
        margin: 0px;
        padding-left: 2%;
        list-style: none;
    }

    .treeview > li > a {
        font-weight: bold;
    }

    .treeview li {
    } 

        .treeview li a {
            padding: 4px;
            font-size: 18px;
            display: inline-block;
            text-decoration: none;
            width: auto;
        }
</style>

<div style="height:50px"></div>
<div style="border:solid 1px black; padding:10px; border-radius:5px; background-color:#FAFAFA;border-color:lightgrey">
    <div class="treeview">
        @if (Model != null && Model.Count() > 0)
        {
            <ul>
                @Treeview.GetTreeView(Model, Model.FirstOrDefault().ParentID)
            </ul>
        }
    </div>
</div>
<div style="height:40px"></div>
<div class="row">
@using (Html.BeginForm("CreateFolder", "Bookkmark"))
{
        <div class="col-md-5">
        </div>
        <div class="col-md-2">
            @Html.TextBox("txtFolderName", "", new { style = "border:groove;width:100%;border-width:1px;border-color:grey;border-radius:5px;height:40px", placeholder = "Create New Folder - Name" })
        </div>
        <div class="col-md-3">
            @Html.TextBox("selectFolder", "", new { style = "border:groove;width:100%;border-width:1px;border-color:grey;border-radius:5px;height:40px", placeholder = "--Select Folder--" })
            <br /> Folder in which the new folder has to be created
        </div>
        <div class="col-md-2">
            <input type="submit" value="Create Folder" id="btnCreateFolder" onclick="return ValidateNewFolder()" style="width:70%;height:40px;border-radius:5px" class="mysubmit" />
        </div>
        }
    </div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".treeview li>ul").css('display', 'none'); // Hide all 2-level ul
            $(".collapsible").click(function (e) {
                e.preventDefault();
                $(this).toggleClass("collapse1 expand1");
                $(this).closest('li').children('ul').slideToggle();
            });
        });
    </script>
}
