@{
    ViewBag.Title = "My Bookkmarks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:100px"></div>
<h2>My Bookkmarks</h2>
@model List<Bookkmark.Models.Bookkmark>

<style>
    .collapse1 {
        width: 28px;
        background-image: url('../../Bookkmark/Images/Folder.png');
        background-repeat: no-repeat;
        /*background-position: -36px -17px;*/
        display: inline-block;
        /*cursor: pointer;*/
    }

    .expand1 {
        width: 28px;
        background-image: url('../../Bookkmark/Images/FolderOpen2.png');
        background-repeat: no-repeat;
        /*background-position: -50px -17px;*/
        display: inline-block;
        /*cursor: pointer;*/

    }

    .treeview ul {
        font: 20px Arial, Sans-Serif;
        margin: 0px;
        padding-left: 2%;
        list-style: none;
    }

    .treeview > li > a {
        font-weight: bold;
    }

    .treeview li {
    } 

        .treeview li a {
            padding: 4px;
            font-size: 18px;
            display: inline-block;
            text-decoration: none;
            width: auto;
        }
</style>

<div style="height:10px"></div>
<div style="border:solid 1px black; padding:10px; border-radius:5px; background-color:#FAFAFA;border-color:lightgrey;">
    <div class="treeview">
        @if (Model != null && Model.Count() > 0)
        {
            <ul>
                @Treeview.GetTreeView(Model, Model.FirstOrDefault().ParentID)
            </ul>
        }
    </div>
    <nav id="context-menu" class="context-menu">
        <ul class="context-menu__items">
            <li class="context-menu__item">
                <a href="#" class="context-menu__link" data-action="Edit">Edit</a>
            </li>
            <li class="context-menu__item">
                <a href="#" class="context-menu__link" data-action="Delete">Delete</a>
            </li>
            <li class="context-menu__item">
                <a href="#" class="context-menu__link" data-action="Add">Add New Bookkmark</a>
            </li>
            <li class="context-menu__item">
                <a href="#" class="context-menu__link" data-action="Add">Add New Folder</a>
            </li>
        </ul>
    </nav>
</div>

