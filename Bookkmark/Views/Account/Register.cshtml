
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
}

@model Users
@using Bookmark.Models

<script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>
<script src="~/js/Facebook.js"></script>
<script src="~/js/Google.js"></script>

<script type="text/javascript" src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js"></script>



<section class=" pt150 pb100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="page_title_area">
                    <div class="section_heading_home">
                        <h3><span>Register</span> </h3>

                    </div>
                </div>

                <div class="contact_from">
                    <form method="post">
                        <div class="form_area">

                            <div class="row">
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="name" id="name" placeholder="First Name" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="name" id="name" placeholder="Last Name" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" name="name" id="name" placeholder="Email ID" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="email" id="email" placeholder="Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="email" id="email" placeholder="Confirm Password" required>
                                    </div>
                                    <button type="submit" class="btn btn-block">LOGIN</button>


                                </div>
                                <div class="col-lg-6 col-12">


                                    <a href="#" class="btn btn-block btn-facebook btn-lg btn-left-icon">
                                        <span class="fa fa-facebook" aria-hidden="true"></span> Register with Facebook
                                    </a>

                                    <a href="#" class="btn btn-block btn-twitter btn-lg btn-left-icon">
                                        <span class="fa fa-twitter" aria-hidden="true"></span> Register with Twitter
                                    </a>

                                    <a href="#" class="btn btn-block btn-google btn-lg btn-left-icon">
                                        <span class="fa fa-google-plus" aria-hidden="true"></span> Register with Google Plus
                                    </a>

                                    <p class="mt20">Already have an account? <a href="@Url.Action("Login", "Account")">Login</a></p>
                                </div>


                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>






