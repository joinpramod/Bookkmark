
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
}


<section class="pt150 pb100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="page_title_area">
                    <div class="section_heading">
                        <h3><span>Change Password</span> </h3>

                    </div>
                </div>

                <div class="contact_from">
                    <form method="post">
                        <div class="form_area">
                            <div class="row justify-content-center">
                                <div class="col-lg-6 col-12">
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="txtOldPassword" id="txtOldPassword" placeholder="Old Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="txtNewPassword" id="txtNewPassword" placeholder="New Password" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="txtConfirmPassword" id="txtConfirmPassword" placeholder="Confirm Password" required>
                                    </div>
                                    <button type="submit" class="btn btn-block">Submit</button>


                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>







