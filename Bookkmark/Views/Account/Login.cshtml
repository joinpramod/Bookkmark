@using Bookmark.Models
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Manage_Bookmark.cshtml";
}

<section class="pt150 pb100">
    <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="page_title_area">
                        <div class="section_heading">
                            <h3><span>Login</span> </h3>

                        </div>
                    </div>

                    <div class="contact_from">
                        <form method="post">
                            <div class="form_area">
                                <div class="row">
                                        <div class="col-lg-6 col-12">
                                            <div class="form-group">
                                                <input type="email" class="form-control" name="name" id="name" placeholder="Email ID" required>
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control" name="email" id="email" placeholder="Password" required>
                                            </div>
                                            <p class="mt20"> <a href="@Url.Action("ForgotPassword", "Account")">Forgotten your password?</a></p>
                                            <button type="submit" class="btn btn-block">LOGIN</button>


                                        </div>
                                        <div class="col-lg-6 col-12">
                                            <a href="@Url.Action("Home","Home")" class="btn btn-block btn-facebook btn-lg btn-left-icon">
                                                <span class="fa fa-facebook" aria-hidden="true"></span> Login with Facebook
                                            </a>

                                            <a href="#" class="btn btn-block btn-twitter btn-lg btn-left-icon">
                                                <span class="fa fa-twitter" aria-hidden="true"></span> Login with Twitter
                                            </a>

                                            <a href="#" class="btn btn-block btn-google btn-lg btn-left-icon">
                                                <span class="fa fa-google-plus" aria-hidden="true"></span> Login with Google Plus
                                            </a>

                                            <p class="mt20">Don't have an account? <a href="@Url.Action("Register", "Account")">Register</a></p>
                                        </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <div style="height:170px">&nbsp;</div>
</section>




